<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleListRecipeTitle" parent="StyleTitle14">
        <item name="android:textColor">@color/recipeListTextColor</item>
    </style>

    <style name="StyleTitle20" parent="StyleTitle14">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_10</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/padding_10</item>
        <item name="android:paddingHorizontal">@dimen/padding_20</item>
        <item name="cornerRadius">@dimen/margin_8</item>
    </style>

</resources>